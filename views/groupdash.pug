extends layout

block content
    h1.text-center #{thisuser.groupID} Dashboard
    div.float-right-dash.border
        h3.text-center Our Members
        br
        each user in users
            li #{user.email}

        //- a.btn(href='/resetgoal') Reset Your Goal
    br
    br
    div.cleared
    h2.text-center Our Progress
    br
    div.progress
        .progress-bar(role="progressbar", style="width: 25%;", aria-valuenow="", aria-valuemin="0", aria-valuemax= "")   

    
    h2.text-center #{thisuser.groupID} Forum   
    h5
        form(method="POST", action="/postforum", autocomplete="on")
            input(type="hidden", name="_csrf", value=_csrf)  
            | Message to Group:
            br
            textarea(name="forumpost", required="", rows="3", cols="35")            
            br
            input(type="submit", class="btn", value="Post")

        table.datatable.table.table-striped.table-bordered
            thead
                th Posted On
                th
                th Group Member
                th
                th Message
            tbody   
                each forum in forums
                    //- -var displaydate = new Date (forum.createdAt);
                    //- -var d = displaydate.getDate();
                    //- -var m = displaydate.getMonth()+1;
                    //- -var y = displaydate.getFullYear();
                    //- -var min = displaydate.getMinutes();
                    //- -function formathours (i){
                    //-     -if i == 0
                    //-         -i = 12
                    //-     -if i > 12
                    //-         -i= i -12
                    //-     -return i
                    //- -}
                    //- -var h = formathours(displaydate.getHours());
                    //- -var prettydate = m + ' ' + d + ' ' + y + ' ' + h + ':' + min;
                    tr
                        td  #{forum.createdAt}                  
                        td      
                        td  #{forum.email}
                        td      
                        td  #{forum.message}

    br
    br


    h2.text-center Group Image Gallery
        .container.width80
            .col-sm-12
                .bs-example
                    #myCarousel.carousel.slide
                        // Carousel indicators
                        ol.carousel-indicators
                            li.active(data-target="#myCarousel", data-slide-to="0")
                            li(data-target="#myCarousel", data-slide-to="1")
                            li(data-target="#myCarousel", data-slide-to="2")
                        // Carousel items
                        .carousel-inner
                            .active.item Slide 1
                            .item Slide 2
                            .item Slide 3
                        // Carousel nav
                        a.carousel-control.left-flat(href="#myCarousel", data-slide="prev") ‹
                        a.carousel-control.right-flat(href="#myCarousel", data-slide="next") ›
    
