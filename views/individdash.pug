extends layout

block content
    h1.textcenter My Dashboard
    form(method="POST", autocomplete="on")
        input(type="hidden", name="_csrf", value=_csrf)
        |    Date*
        br
        input(type="date", name="LogDateTime", required="")
        br
        | Log Entry Type*
        br
        select(required="", name="logtype")
            option(value="default", selected="", disabled="", hidden="") Select
            option(value="Weight") Weight
            option(value="Exercise") Exercise
            option(value="Food") Food
        br
        |     Entry Details* 
        br
        textarea(name="LogDetails", required="", rows="3", cols="35")
        br
        |     Current Progress*
        br
        input(type="number", name="LogProgress", required="")
        br
        |     Goal*
        br
        input(type="number", name="LogGoal", required="")
        br        
        |     Picture Upload
        br
        input(type="file", name="LogImage", accept="image/*")
        br
        br
        input(type="submit", class="btn", value="Add Entry")
    br
    br
    h2.text-center My Progress
    br
    div.progress
        .progress-bar(role="progressbar", style="width: 25%;", aria-valuenow="#{userLog.logentry.individGoalProgress}", aria-valuemin="0", aria-valuemax= "#{userLog.individGoalValue}", aria-data-label="#{userLog.logentry.individGoalProgress} / #{userLog.individGoalValue}")    
    h2.text-center My Log
    br
    br
    table.table
        thead.table-bordered
            tr
                th Date
                th
                th Log Entry Type
                th
                th Details
                th
                th Current Progress
                th
                th Remaining
        tbody   
            each userLog in userLogs
                tr
                    td  #{userLog.logentry.logDate}
                    td      
                    td  #{userLog.logentry.logType}
                    td      
                    td  #{userLog.logentry.logDetails}
                    td      
                    td  #{userLog.logentry.individGoalProgress}
                    td      
                    td  #{userLog.logentry.individGoalRemaining}

    h2.text-center My Image Gallery

    br
    br
    br
    a.btn.text-center(href='/delete') Delete Account