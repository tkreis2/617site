extends layout

block content
    h1 My Dashboard
    form(method="POST", autocomplete="on")
        input(type="hidden", name="_csrf", value=_csrf)
        |    Date*
        br
        input(type="date", name="LogDateTime", required="")
        br
        | Log Entry Type*
        br
        select(required="", name="logtype")
            option(value="default", selected="", disabled="", hidden="") Select
            option(value="LogWeight") Weight
            option(value="LogExercise") Exercise
            option(value="LogFood") Food
        br
        |     Entry Details* 
        br
        textarea(name="LogDetails", required="", rows="5", cols="50")
        br
        |     Current Progress*
        br
        input(type="number", name="LogProgress", required="")
        br
        |     Picture Upload
        br
        input(type="file", name="LogImage", accept="image/*")
        br
        br
        input(type="submit", class="btn", value="Add Entry")
    br
    br
    h4 My Progress
    br
    h2 My Log
    br
    br
    table.table
        thead.table-bordered
            tr
                th Date
                th
                th Log Entry Type
                th
                th Details
                th
                th Current Progress
                th
                th Remaining
        tbody   
            each userLog in userLogs
                tr
                    td  #{userLog.logentry.logDate}
                    td      
                    td  #{userLog.logentry.logType}
                    td      
                    td  #{userLog.logentry.logDetails}
                    td      
                    td  #{userLog.logentry.individGoalProgress}
                    td      
                    td  #{userLog.individGoalRemaining}

    h2 My Image Gallery


    a.btn(href='/delete') Delete Account