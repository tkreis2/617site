extends layout
block content
    br
    if isNew
        h3 New to HealthWe? Make an Account Now!
        form(method="POST")
            input(type="hidden", name="_csrf", value=_csrf)    
            | Full Name*
            br
            input(type="text", name="fullname", required="")
            br
            | Email Address*
            br
            input(type="email", name="emailaddr", required="")
            br
            | Join a Group or Start a New Group?*
            br
            select(required="" name="joinstart")
                option(value="default", selected="", disabled="", hidden="") Select
                option(value="JoinGroup") Join a Group
                option(value="StartGroup") Start a Group
            br
            | Group Name*
            br
            input(type="text", name="groupname", required="")
            br
            | Your Personal Weekly Goal*
            br
            input(type="number", name="goalvalue", required="")
            br            
            | Password*
            br
            input(type="password", name="password", required="")
            br
            input(type="submit", class= "btn", value="Create My Account")
    else
        h3 Already a Member? Log In Here
        form(method="POST" autocomplete="on")
            input(type="hidden", name="_csrf", value=_csrf)    
            | Email Address*
            br
            input(type="email", name="mememailaddr", required="")
            br
            |         Password*
            br
            input(type="password", name="mempassword", required="")
            br
            a(href='/forgot') Forgot Your Password?
            br
            input(type="submit", class="btn", value="Log In")
        br
        br
        .form-group
        .col-sm-offset-3.col-sm-7
            a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
            i.fa.fa-facebook
            | Sign in with Facebook
            a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
            i.fa.fa-twitter
            | Sign in with Twitter
            a.btn.btn-block.btn-google.btn-social(href='/auth/google')
            i.fa.fa-google-plus
            | Sign in with Google
            a.btn.btn-block.btn-github.btn-social(href='/auth/github')
            i.fa.fa-github
            | Sign in with GitHub
            a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
            i.fa.fa-linkedin
            | Sign in with LinkedIn
            a.btn.btn-block.btn-instagram.btn-social(href='/auth/instagram')
            i.fa.fa-instagram
            | Sign in with Instagram        

